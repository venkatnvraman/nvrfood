{
  "name": "yum-food",
  "version": "1.0.0",
  "description": "An online food ordering application built using the Test Driven Development approach with the MERN stack",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "start-watch": "export DEBUG=yum-food* && nodemon --verbose",
    "heroku-postbuild": "npm run seed && npm run build-frontend",
    "build-frontend": "cd frontend && rm -rf node_modules && npm install --cache /tmp/empty-cache && npm install && npm run build",
    "dev": "concurrently --kill-others  \"npm run start-watch\" \"npm run lint-w\"",
    "seed": "export DEBUG=yum-food* && node server/utils/seeder.js",
    "lint": "esw . --fix",
    "lint-w": "esw . --fix -w",
    "test": "jest --setupFiles dotenv/config --testPathPattern=server",
    "integration-test": "jest --setupFiles dotenv/config --testPathPattern=integration-test",
    "test:watch": "jest --setupFiles dotenv/config --watchAll",
    "coveralls": "jest --setupFiles dotenv/config --coverage && cat ./coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chyke007/Yum-food.git"
  },
  "keywords": [
    "pace.africa",
    "yum-food",
    "fullstack",
    "react",
    "redux",
    "jest",
    "tdd",
    "eslint",
    "tailwind"
  ],
  "author": "Nwachukwu Chibuike",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/chyke007/Yum-food/issues"
  },
  "homepage": "https://github.com/chyke007/Yum-food#readme",
  "dependencies": {
    // ... your dependencies
  },
  "devDependencies": {
    // ... your devDependencies
  }
}
